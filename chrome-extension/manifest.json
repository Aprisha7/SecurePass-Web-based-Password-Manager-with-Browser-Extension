{
  "manifest_version": 3,
  "name": "SecurePass",
  "version": "1.0.0",
  "description": "Your secure password manager extension",
  "permissions": [
    "storage",
    "activeTab",
    "tabs",
    "clipboardWrite",
    "notifications",
    "scripting"
  ],
  "host_permissions": [
    "http://localhost:3000/*",
    "<all_urls>"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_title": "SecurePass"
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "run_at": "document_start"
    }
  ],
  "icons": {
    "16": "icon.png",
    "48": "icon.png",
    "128": "icon.png"
  }
}
